package Intermediario;

public enum Senioridade {
    JUNIOR("Eu sou um Junior e tenho pouca experiencia", 2),
    PLENO("Eu sou um Pleno e tenho experiencia razoavel", 4),
    SENIOR ("Eu sou um Senior e tenho muita experiencia", 6);

    private String descricao;
    private int anosDeExperiencia;


    //Ao declarar construtores em enums, voce vai obrigar a passar os valores para os elementos do enum.
    Senioridade(String descricao, int anosDeExperiencia) {
        this.descricao = descricao;
        this.anosDeExperiencia = anosDeExperiencia;
    }
}
