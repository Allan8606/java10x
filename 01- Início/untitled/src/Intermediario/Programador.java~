package Intermediario;

public abstract class Programador {


    //Declarando um atributo final
    final String estudante = "Sim, estou estudando";

    //Chamando o enum
    private Senioridade senioridade;

    private String nome;
    private int anosDeExperiencia;
    private int idade;

    //Construtor  vazio
    public Programador() {
    }
    //Construtor
    public Programador(Senioridade senioridade, String nome, int anosDeExperiencia, int idade) {
        this.senioridade = senioridade;
        this.nome = nome;
        this.anosDeExperiencia = anosDeExperiencia;
        this.idade = idade;
    }


    //Criando um método que usa o enum
    public void dizendoSenioridade(){
        System.out.println("Meu nome é " + getNome() + ", e tenho " + senioridade.getAnosDeExperiencia() + " anos de " +
                "experiência, e " + senioridade.getDescricao());
    }


    //Declarando um método final, e não pode ser sobreescrito.
    final void estouEstudando(){
        System.out.println("Eu sou um eterno estudante, e atualmente estou estudando sim");
    }
    

    @Override
    public String toString() {
        return "Meu nome é " + nome + ", tenho " + idade;
    }

    //Getters e Setters
    public Senioridade getSenioridade() {
        return senioridade;
    }
    public void setSenioridade(Senioridade senioridade) {
        this.senioridade = senioridade;
    }

    public String getNome(){
        return nome;
    }
    public void setNome(String nome){
        this.nome = nome;
    }

    public int getAnosDeExperiencia(){
        return  anosDeExperiencia;
    }
    public void setAnosDeExperiencia(int anosDeExperiencia){
        this.anosDeExperiencia = anosDeExperiencia;
    }

    public int getIdade() {
        return idade;
    }
    public void setIdade(int idade) {
        this.idade = idade;
    }

}
